<Window x:Class="NosStat.WindowsClient.Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:NosStat.WindowsClient.Gui.ViewModel"
        xmlns:view="clr-namespace:NosStat.WindowsClient.Gui.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <viewmodel:ServiceViewModel/>
    </Window.DataContext>
    <StackPanel>
        <view:ServiceStatus DataContext="{Binding .}"/>
        <view:ServiceControls DataContext="{Binding .}"/>
        <view:Info/>
        <view:ErrorDisplay DataContext="{Binding .}"/>
    </StackPanel>
</Window>
